{
    "name": "josephg/roko",
    "description": "Giving your WordPress sites the sanity it needs",
    "license": "GPL-2.0-or-later",
    "autoload": {
        "psr-4": {
            "JosephG\\Roko\\": "src/"
        },
        "files": [
            "src/Infrastructure/WordPress/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "JosephG\\Roko\\Tests\\": "tests/"
        }
    },
    "require": {},
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "wp-coding-standards/wpcs": "^3.0",
        "phpunit/phpunit": "^9.6",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.4"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress src/ roko.php",
        "phpcbf": "phpcbf --standard=WordPress src/ roko.php",
        "php74-compat": "phpcs --standard=PHPCompatibility --runtime-set testVersion 7.4- src/ roko.php",
        "php70-compat": "phpcs --standard=PHPCompatibility --runtime-set testVersion 7.0- src/ roko.php",
        "syntax-check": [
            "find src/ -name '*.php' -exec php -l {} \\;",
            "php -l roko.php"
        ],
        "test": [
            "@syntax-check",
            "@php74-compat",
            "@phpcs",
            "@phpunit"
        ],
        "phpunit": "[ -d tests ] && phpunit tests/ || echo 'No tests directory found'",
        "test-unit": "[ -d tests/Unit ] && phpunit tests/Unit/ || echo 'No unit tests found'",
        "fix": "@phpcbf",
        "validate-composer": "composer validate --strict",
        "security-check": "composer audit",
        "autoload-dump": "composer dump-autoload --optimize"
    }
}